<%= nested_form_for(@dog, :html => {:multipart => true}) do |f| %>
  <% if @dog.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@dog.errors.count, "error") %> prohibited this dog from being saved:</h4>

      <ul>
      <% @dog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
    <%= f.label :name %>
    <%= f.text_field :name %>
  
    <%= f.label :call_name %>
    <%= f.text_field :call_name %>
  
    <%= f.label :color_id %>
    <%= f.select(:color_id, Color.all.map{|c| [c.name, c.id]}, :include_blank => 'Select a Color') %>
  
    <%= f.label :Sire %>
    <%= f.select(:sire_id, Dog.dogs.all.map{|d|[d.name,d.id]}, include_blank: 'Select a Dog') %>

    <%= f.label :Dams %>
    <%= f.select(:dams_id, Dog.bitches.all.map{|b|[b.name,b.id]}, include_blank: 'Select a Bitch') %>
    
    <%= f.label :birthday %>
    <%#= f.date_select :birthday, options= {start_year: Time.now.year - 10} %>
    <div class="input-append date" id="dp3" data-date-format="yyyy-mm-dd">
      <%= f.text_field :birthday, value: date_value(@dog.birthday), :readonly => true %><span class="add-on"><i class="icon-th"></i></span>
    </div>
  
    <%= f.label :gender %>
    <%= f.select(:gender, Dog::GENDER_TYPE.collect{|s|[s,s]}, include_blank: 'Select a gender' ) %>
  
  
    <%= f.label :registration_no %>
    <%= f.text_field :registration_no %>
  
  
    <%= f.fields_for :pictures do |p| %>
      <%= image_tag(p.object.file.url, height: 200, width: 200) if p.object.file? %>
      <%= p.label :file %>
      <%= p.file_field :file %>
      <%= p.link_to_remove t('.remove_image') %>
    <% end %>
    <%= f.link_to_add t('.add_image'), :pictures %>
  

  <div class="actions">
    <%= f.submit class: 'btn btn-primary'%>
  </div>
<% end %>
