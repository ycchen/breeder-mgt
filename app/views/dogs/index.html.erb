<div class="root">
  <div class="row">
      <div class="span12">
          <div class="grey-box">
            <div class="page-header">
            <h4>Dogs</h4>
            <%= add_new_btn(new_dog_path) %>
            </div>

            <% if @dogs.any? %>
              <div>
                <span class="badge"><%= @dogs.size %></span> <%= 'dog'.pluralize(@dogs.size) %> in the database 
                <span class="badge"><%= Dog.dogs.size %></span> Males
                <span class="badge"><%= Dog.bitches.size %></span> Bitches
              </div>
              
            <% end %>

            <table class="table table-striped">
              <thead>
                <tr>
                  <!-- <th>Full name</th> -->
                  <th>Call name</th>
                  <!-- <th>Sire</th>
                  <th>Dams</th> -->
                  <th>Birthday</th>
                  <th>Gender</th>
                  <th>Color</th>
                  <th>Reg. no</th>
                  <!-- <th>Photos</th> -->
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

              <tbody>
                <% @dogs.each do |dog| %>
                  <tr>
                    <!-- <td><%= link_to(dog.name, dog) %></td> -->
                    <td><%= link_to(dog.call_name, dog) %></td>
                    <!-- <td><%=  %></td>
                    <td><%=  %></td> -->
                    <td><%= dog.birthday %></td>
                    <td><%= dog.gender %></td>
                    <td><%= dog.color.name %></td>
                    <td><%= dog.registration_no %></td>
                    <!-- <td><%= dog.pictures.size%></td> -->
                    <td>
                      <div class="btn-group">
                      <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="icon-edit icon-white"></i>Actions
                        <span class="caret"></span>
                      </a>
                      <ul class="dropdown-menu">
                        <li>
                          <%= link_to '<i class="icon-edit"></i> Edit'.html_safe, edit_dog_path(dog) %>
                        </li>
                        <li class="divider"></li>
                        <li>
                          <%= link_to '<i class="icon-trash"></i> Delete'.html_safe, dog, method: :delete, data: {confirm: 'Are you sure?'} %>
                        </li>
                      </ul>
                    </div>  
                    </td>
                    <!-- 
                    <td><%= link_to 'Show', dog %></td>
                    <td><%= link_to 'Edit', edit_dog_path(dog) %></td>
                    <td><%= link_to 'Destroy', dog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                     -->
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New Dog', new_dog_path %>
        </div>      
      </div>
  </div>
</div>