<%= simple_form_for([@pregnancy, @pregnancy.litters.build]) do |f| %>
  <% if @pregnancy.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@pregnancy.errors.count, "error") %> prohibited this litter from being saved:</h4>

      <ul>
      <% @pregnancy.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :pregnancy %><br>
    <%= f.select(:pregnancy_id, Pregnancy.all.map{|p|["#{p.name} - #{p.dog.call_name}", p.id]}, include_blank: 'Select a pregnant bitch') %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select(:gender, Dog::GENDER_TYPE.collect{|s|[s,s]}, include_blank: 'Select a gender' ) %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.select(:color_id, Color.all.map{|c|[c.name, c.id]}, include_blank: 'Select a color') %>
  </div>
    <%= f.label :survival %>
    <%#= f.collection_radio_buttons(:survival, [[true, 'Yes'], [false, 'No']],:first, :last, item_wrapper_class: "inline", default: true) %>
    <%= f.input :survival, :label=> false, :as => :radio_buttons, :item_wrapper_class => 'inline' %>
    
    <%= f.label :cleft_palate %>  
    <%#= f.collection_radio_buttons(:survival, [[true, 'Yes'], [false, 'No']],:first, :last, item_wrapper_class: "inline", default: true) %>
    <%= f.input :cleft_palate, :label=> false, :as => :radio_buttons, :item_wrapper_class => 'inline' %>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary'  %>
  </div>
<% end %>
