<%= form_for(@pregnancy) do |f| %>
  <% if @pregnancy.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@pregnancy.errors.count, "error") %> prohibited this pregnancy from being saved:</h4>

      <ul>
      <% @pregnancy.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :dog %>
    <%= f.select(:dog_id, Dog.bitches.all.map{|b|[b.name, b.id]}, include_blank: 'Select a Bitch')%>
  </div>

  <div class="field">
    <%= f.label :heat_start_date %>
    <%= f.text_field :heat_start_date,'data-behaviour' => 'datepicker', value: date_value(@pregnancy.heat_start_date), :readonly => true %>
  </div>

  <div class="field">
    <%= f.label :Estimate_due_date %>
    <%= f.text_field :due_date,'data-behaviour' => 'datepicker', value: date_value(@pregnancy.due_date), :readonly => true %>
  </div>

  <div class="field">
    <%= f.label :Estimate_surgery_date %>
    <%= f.text_field :surgery_date, 'data-behaviour' => 'datepicker',value: date_value(@pregnancy.surgery_date), :readonly => true %>
    
  </div>

  <div class="field">
    <%= f.label :note %>
    <%= f.text_area :note, id: 'message_area'%>
  </div>
  
  <div class="field">
    <%= f.label :total_puppy %>
    <%= f.number_field :total_puppy %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
